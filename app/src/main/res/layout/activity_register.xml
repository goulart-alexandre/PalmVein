<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro de Usuário"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome completo"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/et_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID do usuário"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status da Coleta:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_collect_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aguardando coleta..."
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_start_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Coleta da Palma"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_stop_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parar Coleta"
        android:layout_marginBottom="16dp"
        android:enabled="false" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar Cadastro"
        android:layout_marginBottom="16dp"
        android:enabled="false" />

    <Button
        android:id="@+id/btn_clear_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apagar Todos os Usuários"
        android:background="#FF5722"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_back_to_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar para Reconhecimento" />

    <RelativeLayout
        android:id="@+id/rl_container_camera_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000" />

</LinearLayout>
