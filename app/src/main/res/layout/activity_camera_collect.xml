<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Container da câmera -->

    <!-- Gabarito fora do container da câmera para ficar sempre acima -->

    <!-- Overlay com instruções e gabarito (sobre a câmera) -->

    <!-- Botão de cancelar -->
    <RelativeLayout
        android:id="@+id/rl_container_camera_collect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        

        <ImageView
            android:id="@+id/img_gabarito_palm_collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-80dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-10dp"
            android:layout_marginBottom="180dp"
            android:adjustViewBounds="true"
            android:contentDescription="Gabarito da palma"
            android:elevation="8dp"
            android:scaleType="centerInside"
            android:alpha="0.6"
            android:src="@drawable/gabarito_palm3"
            android:visibility="visible" />
    </RelativeLayout>

    <!-- Contagem regressiva central (status) -->
    <TextView
        android:id="@+id/txt_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:background="#66000000"
        android:padding="12dp"
        android:elevation="24dp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Cancelar"
        android:textColor="#FFFFFF"
        android:background="#80FF0000"
        android:padding="10dp" />

</RelativeLayout>
