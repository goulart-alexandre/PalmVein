<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hfims.android.lib.palm.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 摄像头预览容器 -->
        <RelativeLayout
            android:id="@+id/rl_container_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000" >

            <ImageView
                android:id="@+id/img_gabarito_palm_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="180dp"
                android:adjustViewBounds="true"
                android:contentDescription="Gabarito da palma"
                android:elevation="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/gabarito_palm"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>

    <com.hfims.android.lib.palm.TrackView
        android:id="@+id/palm_track_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_operate_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_start_collect"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="start collect" />

        <Button
            android:id="@+id/btn_stop_collect"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="stop collect" />
    </LinearLayout>

    <!-- Gabarito da palma (imagem redimensionada em dp) -->

    <LinearLayout
        android:id="@+id/ll_operate_recognize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_operate_collect"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_start_recognize"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="start recognize" />

        <Button
            android:id="@+id/btn_stop_recognize"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="stop recognize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_operate_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_operate_recognize"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_clear_collect"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="clear collect" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Cadastrar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_advanced_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_operate_clear"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_toggle_quality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mostrar Qualidade"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_toggle_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Configurações"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_operate_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_operate_clear"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="#000000"
        android:textSize="28sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_operate_result"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="32dp"
        android:background="#f0f0f0"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="ACESSO LIBERADO"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Nome: -"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="ID: -"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_user_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrado em: -"
            android:textColor="#666666"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Indicador de Qualidade -->
    <LinearLayout
        android:id="@+id/ll_quality_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#80000000"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qualidade da Detecção"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/progress_quality"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#4CAF50" />

        <TextView
            android:id="@+id/txt_quality_percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txt_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distância: --"
            android:textColor="#CCCCCC"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Configurações Avançadas -->
    <LinearLayout
        android:id="@+id/ll_advanced_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Threshold"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekbar_threshold"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="65"
            android:progressTint="#FF9800" />

        <TextView
            android:id="@+id/txt_threshold_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_device_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="#88000000"
        android:letterSpacing="0.1"
        android:padding="10dp"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <!-- Botão hambúrguer para alternar o menu -->
    <ImageButton
        android:id="@+id/btn_hamburger"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:background="@android:color/transparent"
        android:contentDescription="Menu"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_sort_by_size" />
</RelativeLayout>