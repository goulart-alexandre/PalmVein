<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hfims.android.lib.palm.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 摄像头预览容器 -->
        <RelativeLayout
            android:id="@+id/rl_container_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000" />
    </RelativeLayout>

    <com.hfims.android.lib.palm.TrackView
        android:id="@+id/palm_track_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_operate_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp">

        <Button
            android:id="@+id/btn_start_collect"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="start collect" />

        <Button
            android:id="@+id/btn_stop_collect"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:text="stop collect" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_operate_recognize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_operate_collect"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_start_recognize"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="start recognize" />

        <Button
            android:id="@+id/btn_stop_recognize"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="stop recognize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_operate_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_operate_recognize"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <Button
            android:id="@+id/btn_clear_collect"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="clear collect" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Cadastrar" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_operate_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_operate_clear"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="#000000"
        android:textSize="28sp" />

    <LinearLayout
        android:id="@+id/ll_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_operate_result"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#f0f0f0"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuário Reconhecido:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome: -"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txt_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: -"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txt_user_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrado em: -"
            android:textSize="14sp"
            android:textColor="#666666" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_device_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="#88000000"
        android:letterSpacing="0.1"
        android:padding="10dp"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="24sp" />
</RelativeLayout>